{
  "expo": {
    "name": "RapidAid Patient",
    "slug": "rapidaid-patient",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E63946"
    },
    "ios": {
      "bundleIdentifier": "com.rapidaid.patient"
    },
    "android": {
      "package": "com.rapidaid.patient",
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow RapidAid to use your location for emergency requests."
        }
      ]
    ]
  }
}

